{
    "manifest_version": 3,
    "name": "job-fit-lens",
    "short_name": "JobFitLens",
    "description": "Paste job requirements and instantly tailor your resume and cover letter with AI-powered suggestions.",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Job-Fit Lens"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"]
}